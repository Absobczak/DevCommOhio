  <div class="container">
    <div class="col-md-4">

      <%= form_with(model: library, local: true) do |form| %>
        <% if library.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

            <ul>
            <% library.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field well">
          <%= form.label :title %><br>
          <%= form.text_field :title %>
        </div>

        <div class="field well">
          <%= form.label :description %><br>
          <%= form.text_area :description %>
        </div>

        <div class="field well">
          <%= form.label :file_upload %><br>
          <%= cktext_area :file_upload, cols: 40 %>
        </div>

        <div class="field well">
          <%= form.label :tags %><br>
          <%= form.text_field :tags %>
        </div>

        <div class="actions">
         <button class="btn btn-primary-lg"><%= form.submit %></button>
        </div>
      <% end %>
  </div>
</div>