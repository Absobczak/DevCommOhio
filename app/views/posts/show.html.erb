<div class="container">
    <div class="well">
		<p>
		  <strong>Title:</strong>
		  <%= @post.title %>
		</p>

		<p>
		  <strong>Author:</strong>
		  <%= @post.author %>
		</p>
		<p>
		  <strong>Tag:</strong>
		  <%= @post.tag %>
		</p>
	</div>

	<div class="well">
		<p>
		  <strong>Entry:</strong>
		  <%= @post.entry %>
		<%= link_to 'Edit', edit_post_path(@post) %> 
		<%= link_to 'Back', posts_path %>
		</p>
	</div>
		
		<%= render 'comments/form', comment: @comment %>
</div>