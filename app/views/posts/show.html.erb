<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @post.tag %>
</p>

<p>
  <strong>Entry:</strong>
  <%= raw @post.entry %>
</p>
<%= render 'comments/form', comment: @comment %>


<%= link_to 'Back', posts_path %>

<% if @post.author == current_user.name || current_user.role == "admin" %>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= button_to 'Destroy', @posts, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
