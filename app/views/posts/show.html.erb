  <div class="container">
    <div class="well">

			<p id="notice"><%= notice %></p>
		<div class="well">
			<p>
			  <strong>Title:</strong>
			  <%= @post.title %>
			</p>

			<p>
			  <strong>Author:</strong>
			  <%= @post.author %>
			</p>

			<p>
			  <strong>Tag:</strong>
			  <%= @post.tag %>
			</p>

			<%= link_to 'Edit', edit_post_path(@post) %> 
			<%= link_to 'Back', posts_path %>
			

		
		</div>

		<div class="well">
			<p>
			  <strong>Entry:</strong>
			  <%= @post.entry.html_safe %>
			</p>

		</div>

		<div class="well">
			<%= render 'comments/form', comment: @comment %>

		</div>

	</div>
  </div>